<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_blue">

    <!-- Кнопка-заголовок (некликабельная) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height_new"
        android:text="@string/app_name"
        android:textSize="@dimen/button_text_size"
        android:textColor="@color/white"
        android:gravity="center_vertical|start"
        android:paddingStart="@dimen/padding_horizontal"
        android:background="@android:color/transparent"
        android:layout_marginTop="0dp"
        android:includeFontPadding="false"/>


    <!-- Контейнер для кнопок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_horizontal"
        android:paddingBottom="@dimen/padding_vertical_extra_large"
        android:layout_marginTop="@dimen/padding_vertical_large">

        <!-- Кнопка Поиск -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/searchButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/search_button"
            android:textSize="@dimen/button_text_size"
            android:minWidth="@dimen/search_button_text_width"
            android:minHeight="@dimen/button_text_height"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            app:backgroundTint="@color/white"
            app:icon="@drawable/ic_search"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_padding"
            app:iconTint="@color/icon_black"
            app:cornerRadius="@dimen/button_corner_radius"
            android:layout_marginBottom="@dimen/padding_vertical_small"/>

        <!-- Кнопка Медиатека -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/libraryButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/library_button"
            android:textSize="@dimen/button_text_size"
            android:minWidth="@dimen/library_button_text_width"
            android:minHeight="@dimen/button_text_height"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            app:backgroundTint="@color/white"
            app:icon="@drawable/ic_library"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_padding"
            app:iconTint="@color/icon_black"
            app:cornerRadius="@dimen/button_corner_radius"
            android:layout_marginBottom="@dimen/padding_vertical_small"/>

        <!-- Кнопка Настройки -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/settingsButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/settings_button"
            android:textSize="@dimen/button_text_size"
            android:minWidth="@dimen/settings_button_text_width"
            android:minHeight="@dimen/button_text_height"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            app:backgroundTint="@color/white"
            app:icon="@drawable/ic_settings"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_padding"
            app:iconTint="@color/icon_black"
            app:cornerRadius="@dimen/button_corner_radius"/>
    </LinearLayout>
</LinearLayout>