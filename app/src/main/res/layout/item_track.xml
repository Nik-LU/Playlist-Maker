<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Обложка трека -->
    <ImageView
        android:id="@+id/trackCover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/track_cover"
        app:cornerRadius="4dp"/>

    <!-- Текстовая часть -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <!-- Название трека -->
        <TextView
            android:id="@+id/trackName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <!-- Совмещённые исполнитель и время -->
        <TextView
            android:id="@+id/artistAndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/agreementIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_agreement"
        android:contentDescription="@string/agreement_icon_desc"/>
</LinearLayout>